@model DeleteUserModel
@{
    ViewData["Title"] = "Delete User";
}
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6"><h3 class="mb-0">Confirm User Deletion</h3></div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Users</a></li>
                    <li class="breadcrumb-item active">Delete</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Confirm Deletion</h3>
                    </div>
                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="card-body">
                            <div class="alert alert-danger">
                                <h4><i class="fas fa-exclamation-triangle"></i> Warning!</h4>
                                You are about to delete the following user:
                            </div>

                            <div class="mb-3">
                                <h4>@Model.Name</h4>
                            </div>

                            <div class="mb-3">
                                <p>This action is permanent and cannot be undone. Are you sure you want to continue?</p>
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>