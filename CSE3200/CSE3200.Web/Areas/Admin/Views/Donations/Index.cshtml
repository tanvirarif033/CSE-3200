﻿@{
ViewData["Title"] = "Donation Management";
}

@section Styles {
    <style>
        .app-content-header {
            background: linear-gradient(45deg, #1f1f2e, #2c2c3d);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            color: #fff;
            border-radius: 0.5rem;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .stats-card {
            background: linear-gradient(45deg, #3f51b5, #303f9f);
            color: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .stats-number {
            font-size: 2rem;
            font-weight: bold;
        }
    </style>
}

<!-- Begin::Page Header -->
<div class="app-content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h3 class="mb-0">Donation Management</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Donations</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Begin::Main Content -->
<div class="app-content">
    <div class="container-fluid">
        <!-- Quick Stats -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="stats-card">
                    <div class="stats-number">@ViewBag.TotalDonations?.ToString("C0")</div>
                    <div class="stats-label">Total Donations</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card" style="background: linear-gradient(45deg, #28a745, #20c997);">
                    <div class="stats-number">@ViewBag.TotalDonors</div>
                    <div class="stats-label">Total Donors</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stats-card" style="background: linear-gradient(45deg, #fd7e14, #e66408);">
                    <div class="stats-number">@ViewBag.RecentDonations?.Count</div>
                    <div class="stats-label">Recent Donations</div>
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">All Donations</h5>
                <div class="btn-group">
                    <a href="@Url.Action("Export")" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-download"></i> Export
                    </a>
                    <a href="@Url.Action("Statistics")" class="btn btn-outline-info btn-sm">
                        <i class="bi bi-graph-up"></i> Statistics
                    </a>
                    <a href="@Url.Action("PaymentHistory")" class="btn btn-outline-success btn-sm">
                        <i class="bi bi-credit-card"></i> Payment History
                    </a>
                </div>
            </div>
            <div class="card-body">
                <table id="donations" class="table table-striped table-hover table-bordered nowrap" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>Donor Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Amount</th>
                            <th>Payment Method</th>
                            <th>Status</th>
                            <th>Transaction ID</th>
                            <th>Date</th>
                            <th>Disaster</th>
                            <th style="width: 100px;">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            var donationsTable = $('#donations').DataTable({
                processing: true,
                serverSide: true,
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, 'All']],
                layout: {
                    topStart: 'buttons',
                    topEnd: 'search'
                },
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print'],
                ajax: {
                    url: "/Admin/Donations/GetDonationsJson",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        return JSON.stringify({
                            draw: d.draw,
                            start: d.start,
                            length: d.length,
                            search: { value: d.search.value, regex: d.search.regex },
                            order: d.order.map(function (item) {
                                return { column: item.column, dir: item.dir };
                            })
                        });
                    },
                    error: function (xhr, error, thrown) {
                        console.error("DataTables error:", error, thrown);
                        toastr.error("Error loading donation data");
                    },
                    cache: false
                },
                columns: [
                    { data: "donorName", name: "DonorName" },
                    { data: "donorEmail", name: "DonorEmail" },
                    { data: "donorPhone", name: "DonorPhone" },
                    { data: "amount", name: "Amount" },
                    { data: "paymentMethod", name: "PaymentMethod" },
                    {
                        data: "paymentStatus",
                        name: "PaymentStatus",
                        render: function (data, type, row) {
                            var badgeClass = data === 'Completed' ? 'badge bg-success' :
                                            data === 'Pending' ? 'badge bg-warning' : 'badge bg-danger';
                            return `<span class="${badgeClass}">${data}</span>`;
                        }
                    },
                    { data: "transactionId", name: "TransactionId" },
                    { data: "donationDate", name: "DonationDate" },
                    { data: "disasterTitle", name: "Disaster.Title" },
                    {
                        data: "id",
                        name: "Actions",
                        orderable: false,
                        render: function (data, type, row) {
                            return `
                                <a href="/Admin/Donations/Details/${data}" class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-eye"></i>
                                </a>
                            `;
                        }
                    }
                ],
                language: {
                    loadingRecords: "Loading...",
                    processing: "Processing..."
                }
            });

            if ('@TempData["SuccessMessage"]' !== '') {
                toastr.success('@TempData["SuccessMessage"]');
            }

            if ('@TempData["ErrorMessage"]' !== '') {
                toastr.error('@TempData["ErrorMessage"]');
            }
        });
    </script>
}