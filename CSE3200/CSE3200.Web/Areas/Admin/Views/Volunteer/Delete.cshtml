@model DeleteVolunteerAssignmentModel

@{
    ViewData["Title"] = "Delete Volunteer Assignment";
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h3 class="mb-0">Delete Volunteer Assignment</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Volunteer">Volunteer Assignments</a></li>
                    <li class="breadcrumb-item active">Delete Assignment</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Confirm Deletion</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <h5><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this assignment?</h5>
                    <p class="mb-0">This action cannot be undone.</p>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Disaster</label>
                        <p>@Model.DisasterTitle</p>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Volunteer</label>
                        <p>@Model.VolunteerName</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-12">
                        <label class="form-label fw-bold">Task Description</label>
                        <p>@Model.TaskDescription</p>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">Assigned Date</label>
                        <p>@Model.AssignedDate.ToString("yyyy-MM-dd")</p>
                    </div>
                </div>

                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i> Confirm Delete
                        </button>
                        <a href="/Admin/Volunteer" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>