@model CSE3200.Web.Areas.Admin.Models.DisasterVolunteersModel

@{
    ViewData["Title"] = "Volunteers for " + Model.DisasterTitle;
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h3 class="mb-0">Volunteers: @Model.DisasterTitle</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Disasters">Disasters</a></li>
                    <li class="breadcrumb-item active">Volunteers</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <span class="badge bg-primary fs-6">@Model.VolunteerCount Volunteers Assigned</span>
                    </div>
                    <a href="/Admin/Volunteer/Assign?disasterId=@Model.DisasterId" class="btn btn-success">
                        <i class="bi bi-person-plus me-1"></i> Assign New Volunteer
                    </a>
                </div>
            </div>
        </div>

        @if (Model.Assignments.Any())
        {
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Assigned Volunteers</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Volunteer</th>
                                    <th>Task Description</th>
                                    <th>Assigned Date</th>
                                    <th>Assigned By</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var assignment in Model.Assignments)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="ms-3">
                                                    <h6 class="mb-0">@assignment.VolunteerName</h6>
                                                    <small class="text-muted">@assignment.VolunteerEmail</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@assignment.TaskDescription</td>
                                        <td>@assignment.AssignedDate.ToString("yyyy-MM-dd")</td>
                                        <td>@assignment.AssignedBy</td>
                                        <td>
                                            <span class="badge bg-@(assignment.Status == "Assigned" ? "success" :
                                                                                                  assignment.Status == "Completed" ? "primary" : "warning")">
                                        @assignment.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/Admin/Volunteer/Edit/@assignment.Id" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <form asp-action="RemoveAssignment" method="post"
                                              onsubmit="return confirm('Are you sure you want to remove this volunteer assignment?')">
                                            <input type="hidden" name="assignmentId" value="@assignment.Id" />
                                            <input type="hidden" name="disasterId" value="@Model.DisasterId" />
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="bi bi-person-dash"></i> Remove
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="bi bi-people display-4 text-muted"></i>
                    <h4 class="mt-3">No Volunteers Assigned</h4>
                    <p class="text-muted">No volunteers have been assigned to this disaster yet.</p>
                    <a href="/Admin/Volunteer/Assign?disasterId=@Model.DisasterId" class="btn btn-primary">
                        <i class="bi bi-person-plus me-1"></i> Assign First Volunteer
                    </a>
                </div>
            </div>
        }
    </div>
</div>