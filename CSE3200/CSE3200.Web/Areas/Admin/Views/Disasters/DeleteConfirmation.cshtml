@model DeleteDisasterModel
@{
    ViewData["Title"] = "Delete Disaster";
}

<div class="app-content-header py-3 bg-dark text-white mb-4">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h3 class="mb-0">Delete Disaster</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0 bg-transparent">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard" class="text-white-50">Home</a></li>
                    <li class="breadcrumb-item"><a href="/Admin/Disasters" class="text-white-50">Disasters</a></li>
                    <li class="breadcrumb-item active text-white" aria-current="page">Delete</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm border-0 mb-4">
                    <div class="card-header bg-danger text-white">
                        <h5 class="mb-0">Confirm Deletion</h5>
                    </div>
                    <div class="card-body">
                        <p class="alert alert-warning">
                            <strong>Warning:</strong> Are you sure you want to delete this disaster? This action cannot be undone.
                        </p>

                        <div class="mb-3">
                            <strong>Title:</strong> @Model.Title
                        </div>

                        <form asp-antiforgery="true" asp-area="Admin" asp-controller="Disasters" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <div class="d-flex justify-content-between">
                                <a href="/Admin/Disasters" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete Disaster</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>