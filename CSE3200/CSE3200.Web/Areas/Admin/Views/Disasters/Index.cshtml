@{
    ViewData["Title"] = "Disasters";
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/2.2.2/css/dataTables.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/3.0.2/css/buttons.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

    <style>
        .app-content-header {
            background: linear-gradient(45deg, #1f1f2e, #2c2c3d);
            padding: 1.5rem;
            margin-bottom: 1.5rem;
            color: #fff;
            border-radius: 0.5rem;
        }

        .card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
        }

        .card-header {
            background-color: #f8f9fa;
            border-bottom: 1px solid #dee2e6;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
        }

        .btn-primary {
            background-color: #3f51b5;
            border-color: #3f51b5;
        }

            .btn-primary:hover {
                background-color: #303f9f;
                border-color: #303f9f;
            }

        .badge-pending {
            background-color: #ffc107;
            color: #000;
        }

        .badge-approved {
            background-color: #198754;
        }

        .badge-rejected {
            background-color: #dc3545;
        }

        .btn-assign {
            background-color: #28a745;
            border-color: #28a745;
            color: white;
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }

            .btn-assign:hover {
                background-color: #218838;
                border-color: #1e7e34;
                color: white;
            }

            .btn-assign:disabled {
                background-color: #6c757d;
                border-color: #6c757d;
                cursor: not-allowed;
            }
    </style>
}

<!-- Begin::Page Header -->
<div class="app-content-header">
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center flex-wrap">
            <h3 class="mb-0">Disasters</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Home</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Disasters</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<!-- Begin::Main Content -->
<div class="app-content">
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Disaster List</h5>
                <a asp-action="Add" class="btn btn-primary"><i class="bi bi-plus-lg me-1"></i> Add Disaster</a>
            </div>
            <div class="card-body">
                <table id="disasters" class="table table-striped table-hover table-bordered nowrap" style="width:100%">
                    <thead class="table-light">
                        <tr>
                            <th>Title</th>
                            <th>Location</th>
                            <th>Severity</th>
                            <th>Occurred Date</th>
                            <th>Affected People</th>
                            <th>Status</th>
                            <th style="width: 200px;">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.datatables.net/2.2.2/js/dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.10.1/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.2.7/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/3.0.2/js/buttons.print.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <script>
        $(document).ready(function () {
            var disastersTable = $('#disasters').DataTable({
                processing: true,
                serverSide: true,
                responsive: true,
                lengthChange: true,
                autoWidth: false,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, 'All']],
                layout: {
                    topStart: 'buttons',
                    topEnd: 'search'
                },
                buttons: ['copy', 'csv', 'excel', 'pdf', 'print'],
                ajax: {
                    url: "/Admin/Disasters/GetDisastersJson",
                    type: "POST",
                    contentType: "application/json",
                    dataType: "json",
                    data: function (d) {
                        return JSON.stringify({
                            draw: d.draw,
                            start: d.start,
                            length: d.length,
                            search: { value: d.search.value, regex: d.search.regex },
                            order: d.order.map(function (item) {
                                return { column: item.column, dir: item.dir };
                            })
                        });
                    },
                    error: function (xhr, error, thrown) {
                        console.error("DataTables error:", error, thrown);
                        toastr.error("Error loading disaster data");
                    },
                    cache: false
                },
                columns: [
                    { data: "title", name: "Title" },
                    { data: "location", name: "Location" },
                    { data: "severity", name: "Severity" },
                    { data: "occurredDate", name: "OccurredDate" },
                    { data: "affectedPeople", name: "AffectedPeople" },
                    {
                        data: "status",
                        name: "Status",
                        render: function (data, type, row) {
                            var badgeClass = '';
                            var statusText = '';

                            switch(data.toLowerCase()) {
                                case 'pendingapproval':
                                    badgeClass = 'badge bg-warning';
                                    statusText = 'Pending Approval';
                                    break;
                                case 'approved':
                                    badgeClass = 'badge bg-success';
                                    statusText = 'Approved';
                                    break;
                                case 'rejected':
                                    badgeClass = 'badge bg-danger';
                                    statusText = 'Rejected';
                                    break;
                                default:
                                    badgeClass = 'badge bg-secondary';
                                    statusText = data;
                            }
                            return `<span class="badge ${badgeClass}">${statusText}</span>`;
                        }
                    },
                    {
                        data: "actions",
                        name: "Actions",
                        orderable: false,
                        render: function (data, type, row) {
                            // Add Assign Volunteer button to approved disasters
                            var assignButton = '';
                            if (row.status.toLowerCase() === 'approved') {
                                assignButton = `<a href="/Admin/Volunteer/Assign?disasterId=${row.id}" class="btn btn-assign btn-sm" title="Assign Volunteers">
                                    <i class="bi bi-person-plus"></i> Assign
                                </a> `;
                            } else {
                                assignButton = `<button class="btn btn-assign btn-sm" disabled title="Only approved disasters can have volunteers assigned">
                                    <i class="bi bi-person-plus"></i> Assign
                                </button> `;
                            }

                            return assignButton + data;
                        }
                    }
                ],
                language: {
                    loadingRecords: "Loading...",
                    processing: "Processing..."
                }
            });

            if ('@TempData["SuccessMessage"]' !== '') {
                toastr.success('@TempData["SuccessMessage"]');
                disastersTable.ajax.reload(null, false);
            }

            if ('@TempData["ErrorMessage"]' !== '') {
                toastr.error('@TempData["ErrorMessage"]');
            }
        });
    </script>
}