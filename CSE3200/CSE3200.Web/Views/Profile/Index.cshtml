@model CSE3200.Web.Models.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" class="rounded-circle mb-3" width="150" height="150" alt="Profile Picture">
                    }
                    else
                    {
                        <div class="bg-secondary rounded-circle d-flex align-items-center justify-content-center mb-3" style="width: 150px; height: 150px; margin: 0 auto;">
                            <span class="text-white fs-1">@Model.FirstName[0]@Model.LastName[0]</span>
                        </div>
                    }
                    <h4>@Model.FirstName @Model.LastName</h4>
                    <p class="text-muted">@Model.Email</p>
                    
                    @if (Model.IsVolunteerRequested)
                    {
                        <div class="alert alert-info">
                            <strong>Volunteer Status:</strong> @Model.VolunteerRequestStatus
                        </div>
                    }
                    else if (User.IsInRole("Volunteer"))
                    {
                        <div class="alert alert-success">
                            <strong>Volunteer Status:</strong> Approved Volunteer
                        </div>
                    }
                    else
                    {
                        <a asp-action="RequestVolunteer" class="btn btn-primary">Become a Volunteer</a>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5>Profile Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.FirstName @Model.LastName</dd>
                        
                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>
                        
                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@(Model.PhoneNumber ?? "Not provided")</dd>
                        
                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@(Model.Address ?? "Not provided")</dd>
                        
                        <dt class="col-sm-4">City/State/Zip</dt>
                        <dd class="col-sm-8">@(Model.City ?? "Not provided"), @(Model.State ?? "") @(Model.ZipCode ?? "")</dd>
                        
                        <dt class="col-sm-4">Emergency Contact</dt>
                        <dd class="col-sm-8">@(Model.EmergencyContactName ?? "Not provided") - @(Model.EmergencyContactPhone ?? "")</dd>
                        
                        <dt class="col-sm-4">Skills</dt>
                        <dd class="col-sm-8">@(Model.Skills ?? "Not provided")</dd>
                        
                        <dt class="col-sm-4">Member Since</dt>
                        <dd class="col-sm-8">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</dd>
                    </dl>
                    
                    <div class="mt-3">
                        <a asp-action="Edit" class="btn btn-outline-primary">Edit Profile</a>
                        @if (User.IsInRole("Volunteer"))
                        {
                            <a asp-action="VolunteerAssignments" class="btn btn-outline-info ms-2">My Assignments</a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>