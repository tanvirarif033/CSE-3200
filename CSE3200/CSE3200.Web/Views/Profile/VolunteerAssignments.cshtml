@model IList<CSE3200.Domain.Entities.VolunteerAssignment>

@{
    ViewData["Title"] = "My Volunteer Assignments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>My Volunteer Assignments</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Profile</a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var assignment in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header">
                            <h5 class="card-title mb-0">@assignment.TaskDescription</h5>
                        </div>
                        <div class="card-body">
                            <div class="mb-2">
                                <strong>Status:</strong>
                                <span class="badge bg-@(assignment.Status == "Completed" ? "success" :
                                                                                          assignment.Status == "InProgress" ? "warning" : "primary")">
                            @assignment.Status
                        </span>
                    </div>
                    <div class="mb-2">
                        <strong>Assigned:</strong> @assignment.AssignedDate.ToString("MMM dd, yyyy")
                    </div>
                    @if (assignment.StartDate.HasValue)
                            {
                                <div class="mb-2">
                                    <strong>Start:</strong> @assignment.StartDate.Value.ToString("MMM dd, yyyy")
                                </div>
                            }
                            @if (assignment.EndDate.HasValue)
                            {
                                <div class="mb-2">
                                    <strong>End:</strong> @assignment.EndDate.Value.ToString("MMM dd, yyyy")
                                </div>
                            }
                            @if (!string.IsNullOrEmpty(assignment.Notes))
                            {
                                <div class="mb-2">
                                    <strong>Notes:</strong> @assignment.Notes
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            You don't have any volunteer assignments yet.
        </div>
    }
</div>