<!-- Views/Account/ResetPasswordConfirmation.cshtml -->
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="text-center mb-0">Password Reset Successful</h3>
            </div>
            <div class="card-body text-center">
                <div class="mb-4">
                    <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                </div>
                <h4 class="text-success">Your password has been reset successfully!</h4>
                <p class="text-muted">You have been automatically logged in with your new password.</p>
                <div class="d-grid gap-2">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Go to Dashboard</a>
                    <a asp-action="Login" class="btn btn-outline-secondary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>