@using CSE3200.Web.Models
@model RegisterModel

@{
    ViewData["Title"] = "Register";
}

<style>
    .register-wrapper {
        display: flex;
        min-height: 100vh;
        background-color: #0d1117;
        color: white;
    }

    .register-left {
        flex: 1;
        background-color: #1e1e58;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
    }

    .register-left h2 {
        font-weight: bold;
    }

    .register-feature {
        background-color: #2c2c6c;
        padding: 1rem;
        border-radius: 10px;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .register-feature i {
        font-size: 1.5rem;
    }

    .register-right {
        flex: 1;
        background-color: #161b22;
        padding: 4rem;
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
    }

    .register-right .form-control {
        background-color: #2d333b;
        border: none;
        color: white;
    }

    .register-right .form-control::placeholder {
        color: #aaa;
    }

    .btn-register {
        background-color: #2c2c6c;
        border: none;
        color: white;
        font-weight: bold;
    }

    .btn-register:hover {
        background-color: #3f3f8f;
    }

    a {
        color: #58a6ff;
    }
</style>

<div class="container-fluid register-wrapper">
    <!-- Left panel -->
    <div class="register-left">
        <div class="text-center mb-4">
            <i class="bi bi-person-plus" style="font-size: 3rem;"></i>
            <h2 class="mt-3">Join Our Website Today!</h2>
            <p>Start your learning journey with us</p>
        </div>

        <div class="register-feature">
            <i class="bi bi-journal-check"></i>
            <div>
                <strong>Personalized Courses</strong><br />
                <small>Tailored learning paths just for you</small>
            </div>
        </div>

        <div class="register-feature">
            <i class="bi bi-chat-dots"></i>
            <div>
                <strong>Interactive Community</strong><br />
                <small>Ask questions, get answers</small>
            </div>
        </div>

        <div class="register-feature">
            <i class="bi bi-bar-chart-line"></i>
            <div>
                <strong>Growth Tracking</strong><br />
                <small>Measure your progress every day</small>
            </div>
        </div>
    </div>

    <!-- Right panel -->
    <div class="register-right">
        <h3 class="mb-3">Create Your Account</h3>
        <p>Please fill in your details to register</p>

        <form id="registerForm" asp-route-returnUrl="/Admin/Dashboard" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label">First Name</label>
                <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" autocomplete="given-name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label">Last Name</label>
                <input asp-for="LastName" class="form-control" placeholder="Enter your last name" autocomplete="family-name" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Create a password" autocomplete="new-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter password" autocomplete="new-password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-register">Register</button>
            </div>

            <div class="text-center">
                Already have an account? <a asp-action="Login">Log in here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
