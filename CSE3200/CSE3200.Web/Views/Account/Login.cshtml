@using CSE3200.Web.Models
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<style>
    .login-wrapper {
        display: flex;
        min-height: 100vh;
        background-color: #0d1117;
        color: white;
    }

    .login-left {
        flex: 1;
        background-color: #1e1e58;
        display: flex;
        flex-direction: column;
        justify-content: center;
        padding: 4rem;
        border-top-left-radius: 12px;
        border-bottom-left-radius: 12px;
    }

        .login-left h2 {
            font-weight: bold;
        }

    .login-feature {
        background-color: #2c2c6c;
        padding: 1rem;
        border-radius: 10px;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

        .login-feature i {
            font-size: 1.5rem;
        }

    .login-right {
        flex: 1;
        background-color: #161b22;
        padding: 4rem;
        border-top-right-radius: 12px;
        border-bottom-right-radius: 12px;
    }

        .login-right .form-control {
            background-color: #2d333b;
            border: none;
            color: white;
        }

            .login-right .form-control::placeholder {
                color: #aaa;
            }

    .btn-login {
        background-color: #2c2c6c;
        border: none;
        color: white;
        font-weight: bold;
    }

        .btn-login:hover {
            background-color: #3f3f8f;
        }

    a {
        color: #58a6ff;
    }

    .or-divider {
        display: flex;
        align-items: center;
        gap: .75rem;
        margin: 1.25rem 0;
        color: #9aa4af;
    }

        .or-divider hr {
            flex: 1;
            border-color: #2d333b;
            opacity: .6;
        }

    .btn-google {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        border: 1px solid #30363d;
        background: #21262d;
        color: white;
        padding: .6rem 1.2rem;
        border-radius: .375rem;
        cursor: pointer;
        transition: all 0.2s ease-in-out;
    }

        .btn-google:hover {
            background: #2b3137;
        }

    .g-logo {
        width: 20px;
        height: 20px;
    }
</style>

<div class="container-fluid login-wrapper">
    <!-- Left panel -->
    <div class="login-left">
        <div class="text-center mb-4">
            <i class="bi bi-box-arrow-in-right" style="font-size: 3rem;"></i>
            <h2 class="mt-3">Welcome Back to Our Website!</h2>
            <p>Continue your learning journey with us</p>
        </div>

        <div class="login-feature">
            <i class="bi bi-book"></i>
            <div>
                <strong>Resume Learning</strong><br />
                <small>Pick up right where you left off</small>
            </div>
        </div>

        <div class="login-feature">
            <i class="bi bi-people"></i>
            <div>
                <strong>Connect with Peers</strong><br />
                <small>Join study groups and discussions</small>
            </div>
        </div>

        <div class="login-feature">
            <i class="bi bi-trophy"></i>
            <div>
                <strong>Track Progress</strong><br />
                <small>Monitor your achievements</small>
            </div>
        </div>
    </div>

    <!-- Right panel -->
    <div class="login-right">
        <h3 class="mb-3">Login to Your Account</h3>
        <p>Please enter your credentials to continue</p>
        <form method="post" asp-route-returnUrl="/Admin/Dashboard">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" autocomplete="username" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" />
                <label asp-for="RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.RememberMe)</label>
            </div>

            <div class="d-grid mb-2">
                <button type="submit" class="btn btn-login">Sign in to your account</button>
            </div>

            <div class="text-end">
                <a asp-action="ForgotPassword">Forgot password?</a>
            </div>

            <div class="mt-3 text-center">
                Don't have an account? <a asp-action="Register" asp-route-returnUrl="/Admin/Dashboard">Create an account</a>
            </div>
        </form>

        <!-- Divider -->
        <div class="or-divider">
            <hr /><span>or</span><hr />
        </div>

        @* //Google-button *@
        <div class="text-center">
            <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="returnUrl" value="/Admin/Dashboard" />
                <button type="submit" name="provider" value="Google" class="btn-google">
                    <!-- Google SVG Icon -->
                    <svg class="g-logo" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
                        <path fill="#EA4335" d="M24 9.5c3.9 0 6.6 1.7 8.1 3.1l6-6C34.5 3.5 29.7 1 24 1 14.9 1 7.2 6.6 3.6 14.4l7 5.4C12.3 14.5 17.6 9.5 24 9.5z" />
                        <path fill="#4285F4" d="M46.1 24.5c0-1.6-.1-3.1-.4-4.5H24v9h12.6c-.5 2.5-2.1 4.6-4.3 6.1l6.6 5.1c3.9-3.6 6.2-8.9 6.2-15.7z" />
                        <path fill="#FBBC05" d="M10.6 28.8c-.5-1.5-.8-3-.8-4.8s.3-3.3.8-4.8l-7-5.4C2.6 17 2 20.4 2 24s.6 7 1.6 10.2l7-5.4z" />
                        <path fill="#34A853" d="M24 47c5.7 0 10.5-1.9 14-5.2l-6.6-5.1c-1.8 1.2-4.2 2-7.4 2-6.4 0-11.7-5-13.6-11.6l-7 5.4C7.2 41.4 14.9 47 24 47z" />
                    </svg>
                    Login with Google
                </button>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
    