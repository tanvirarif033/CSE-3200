@using CSE3200.Web.Models
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!--
    Disaster Management – Professional Themed Login Page
    - High contrast, emergency-ready palette
    - Clear visual hierarchy and accessibility (labels, focus, contrast)
    - Left panel: trust + context (alerts, features, hotline)
    - Right panel: compact login with social sign-in
-->

<style>
    :root {
        --bg: #0b1220; /* page bg */
        --panel: #0f172a; /* right card bg */
        --panel-2: #0b1530; /* left card bg */
        --muted: #94a3b8; /* secondary text */
        --border: #23314d; /* subtle borders */
        --accent: #f97316; /* safety orange */
        --accent-2: #ef4444; /* alert red */
        --accent-3: #22c55e; /* ok green */
    }

    body {
        background: radial-gradient(1200px 800px at 10% 5%, #0f1b33 0%, var(--bg) 60%);
    }

    .login-shell {
        min-height: 100vh;
        display: grid;
        place-items: center;
        padding: 2rem;
    }

    .login-grid {
        display: grid;
        grid-template-columns: 1.05fr 0.95fr;
        gap: 0;
        width: min(1120px, 100%);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 20px 60px rgba(0,0,0,.45);
        border: 1px solid #16233b;
    }

    /* Left Panel */
    .left {
        position: relative;
        padding: 3.25rem 3rem;
        background: radial-gradient(900px 600px at 20% 10%, #12244b 0%, var(--panel-2) 60%);
        color: white;
    }

    .brand {
        display: flex;
        align-items: center;
        gap: .75rem;
        margin-bottom: 1.25rem;
    }

        .brand .crest {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: grid;
            place-items: center;
            background: linear-gradient(135deg, #ffedd5, #fde68a);
            color: #0b1220;
            font-weight: 800;
        }

        .brand h1 {
            font-size: 1.25rem;
            margin: 0;
            letter-spacing: .3px
        }

    .tag {
        display: inline-flex;
        gap: .5rem;
        align-items: center;
        padding: .35rem .6rem;
        border-radius: 999px;
        font-size: .8rem;
        background: rgba(34,197,94,.14);
        color: #bbf7d0;
        border: 1px solid rgba(34,197,94,.35);
    }

    .hero {
        margin: 1.2rem 0 1.4rem;
    }

        .hero h2 {
            font-weight: 800;
            line-height: 1.15;
            margin: 0 0 .5rem;
            font-size: 2rem;
        }

        .hero p {
            margin: 0;
            color: var(--muted);
        }

    .alert-banner {
        display: flex;
        gap: 12px;
        align-items: flex-start;
        background: linear-gradient(0deg, rgba(239,68,68,.12), rgba(239,68,68,.12));
        border: 1px solid rgba(239,68,68,.35);
        padding: .9rem 1rem;
        border-radius: 12px;
        margin: 1.25rem 0;
    }

    .alert-badge {
        display: inline-flex;
        align-items: center;
        gap: .5rem;
        background: rgba(239,68,68,.18);
        color: #fecaca;
        border: 1px solid rgba(239,68,68,.35);
        font-weight: 700;
        font-size: .78rem;
        padding: .25rem .6rem;
        border-radius: 999px;
    }

    .alert-text {
        color: #fecaca;
    }

    .features {
        display: grid;
        gap: .8rem;
        margin-top: 1.25rem;
    }

    .feat {
        display: flex;
        gap: 12px;
        align-items: flex-start;
        background: rgba(255,255,255,.03);
        border: 1px solid var(--border);
        padding: .85rem 1rem;
        border-radius: 12px;
    }

        .feat i {
            font-size: 1.1rem;
            color: #f8fafc;
            background: rgba(255,255,255,.06);
            width: 32px;
            height: 32px;
            display: grid;
            place-items: center;
            border-radius: 8px;
        }

        .feat strong {
            display: block;
        }

        .feat small {
            color: var(--muted);
        }

    .hotline {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 1rem;
        background: linear-gradient(135deg, rgba(249,115,22,.15), rgba(252,211,77,.12));
        border: 1px dashed rgba(249,115,22,.6);
        padding: .85rem 1rem;
        border-radius: 12px;
        margin-top: 1.25rem;
    }

        .hotline .number {
            font-size: 1.25rem;
            font-weight: 900;
            letter-spacing: 1px;
            color: #ffedd5;
        }

        .hotline .minitext {
            color: #fcd34d;
            font-size: .85rem;
        }

    .left-actions {
        display: flex;
        gap: .6rem;
        margin-top: 1rem;
    }

    .btn-ghost, .btn-accent {
        appearance: none;
        border-radius: 10px;
        padding: .6rem .9rem;
        border: 1px solid var(--border);
        color: #e5e7eb;
        background: transparent;
        cursor: pointer;
        font-weight: 600;
    }

    .btn-accent {
        background: linear-gradient(180deg, rgba(249,115,22,.18), rgba(249,115,22,.1));
        border-color: rgba(249,115,22,.55);
        color: #ffedd5;
    }

    .btn-ghost:hover {
        background: rgba(255,255,255,.05);
    }

    .btn-accent:hover {
        filter: brightness(1.05);
    }

    /* Right Panel */
    .right {
        background: linear-gradient(180deg, var(--panel), #0d1426);
        padding: 3rem;
        color: #e5e7eb;
        position: relative;
    }

        .right header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1rem;
        }

            .right header .sys {
                font-size: .82rem;
                color: var(--muted);
            }

    .form-wrap {
        background: rgba(255,255,255,.03);
        border: 1px solid var(--border);
        border-radius: 14px;
        padding: 1.2rem;
    }

        .form-wrap h3 {
            margin: 0 0 .25rem;
            font-weight: 800;
        }

        .form-wrap p {
            margin: 0 0 .9rem;
            color: var(--muted);
        }

    .form-control {
        background: #0b1220;
        border: 1px solid #1e293b;
        color: #e5e7eb;
    }

        .form-control::placeholder {
            color: #96a3b8;
        }

    .form-label {
        font-weight: 600;
    }

    .btn-login {
        background: linear-gradient(180deg, #f97316, #ea580c);
        border: none;
        color: white;
        font-weight: 800;
        padding: .7rem 1rem;
        border-radius: 10px;
    }

        .btn-login:hover {
            filter: brightness(1.05);
        }

    .or {
        display: flex;
        align-items: center;
        gap: .75rem;
        margin: 1rem 0;
        color: #9aa4af;
    }

        .or hr {
            flex: 1;
            border-color: #253149;
            opacity: .7;
        }

    .btn-google {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        font-weight: 700;
        border: 1px solid #30363d;
        background: #121826;
        color: white;
        padding: .6rem 1rem;
        border-radius: 10px;
        cursor: pointer;
        transition: .2s;
    }

        .btn-google:hover {
            background: #192136;
        }

    .g-logo {
        width: 20px;
        height: 20px;
    }

    .foot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: .8rem;
        color: var(--muted);
        font-size: .85rem;
        margin-top: 1rem;
    }

        .foot a {
            color: #93c5fd;
            text-decoration: none;
        }

            .foot a:hover {
                text-decoration: underline;
            }

    @@media (max-width: 980px) {
        .login-grid {
            grid-template-columns: 1fr;
        }

        .right {
            padding: 2rem;
        }

        .left {
            padding: 2.25rem 1.5rem;
        }
    }
</style>

<div class="login-shell">
    <div class="login-grid" role="main">
        <!-- LEFT: Context / Trust / Emergency -->
        <section class="left" aria-label="Disaster portal context">
            <div class="brand" aria-label="Brand">
                <div class="crest" aria-hidden="true">DM</div>
                <div>
                    <div class="tag"><i class="bi bi-shield-exclamation"></i> Govt • Trusted</div>
                    <h1 class="mt-1">National Disaster Response Portal</h1>
                </div>
            </div>

            <div class="hero">
                <h2>Stay Prepared. Respond Faster. Save Lives.</h2>
                <p>Login to access early warnings, shelter availability, relief logistics, and field ops tools.</p>
            </div>

            <div class="alert-banner" role="status" aria-live="polite">
                <div class="alert-badge"><i class="bi bi-broadcast-pin"></i> Live Alert</div>
                <div class="alert-text">Monsoon season on watch. Review safety protocols and verify team rosters.</div>
            </div>

            <div class="features" aria-label="Key capabilities">
                <div class="feat">
                    <i class="bi bi-radar"></i>
                    <div>
                        <strong>Early Warnings</strong>
                        <small>Area-based alerts, flood & cyclone tracks, impact models</small>
                    </div>
                </div>
                <div class="feat">
                    <i class="bi bi-geo-alt"></i>
                    <div>
                        <strong>Shelter & Route Finder</strong>
                        <small>Nearest shelters, safe routes & blockages in real-time</small>
                    </div>
                </div>
                <div class="feat">
                    <i class="bi bi-box-seam"></i>
                    <div>
                        <strong>Relief Logistics</strong>
                        <small>Inventory, dispatches, delivery confirmation, and audit trails</small>
                    </div>
                </div>
            </div>

            <div class="hotline" aria-label="Emergency hotline">
                <div>
                    <div class="number"><i class="bi bi-telephone-outbound"></i> 999</div>
                    <div class="minitext">Emergency Hotline • 24/7</div>
                </div>
                <div class="left-actions">
                    <a class="btn-ghost" href="#" role="button"><i class="bi bi-lightning-charge"></i> View Alerts</a>
                    <a class="btn-accent" href="#" role="button"><i class="bi bi-life-preserver"></i> Safety Tips</a>
                </div>
            </div>
        </section>

        <!-- RIGHT: Login -->
        <section class="right" aria-label="Login panel">
            <header>
                <div class="sys">Restricted Access · Authorized personnel only</div>
                <div class="sys"><i class="bi bi-translate"></i> <a href="#">বাংলা</a> · <a href="#">EN</a></div>
            </header>

            <div class="form-wrap">
                <h3 class="mb-1">Sign in to your account</h3>
                <p>Use your official email and password. For issues, contact your regional admin.</p>

                <form method="post" asp-route-returnUrl="/Admin/Dashboard" aria-label="Login form">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="name@example.gov" autocomplete="username" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">@Html.DisplayNameFor(m => m.RememberMe)</label>
                    </div>

                    <div class="d-grid mb-2">
                        <button type="submit" class="btn btn-login"><i class="bi bi-box-arrow-in-right"></i> Sign In</button>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <a asp-action="ForgotPassword">Forgot password?</a>
                        <small class="text-secondary">New responder? <a asp-action="Register" asp-route-returnUrl="/Admin/Dashboard">Create account</a></small>
                    </div>
                </form>

                <div class="or"><hr><span>or</span><hr></div>

                <!-- Google button -->
                <form asp-controller="Account" asp-action="ExternalLogin" method="post" class="text-center" aria-label="Google sign in">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="/Admin/Dashboard" />
                    <button type="submit" name="provider" value="Google" class="btn-google">
                        <svg class="g-logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" aria-hidden="true">
                            <path fill="#EA4335" d="M24 9.5c3.9 0 6.6 1.7 8.1 3.1l6-6C34.5 3.5 29.7 1 24 1 14.9 1 7.2 6.6 3.6 14.4l7 5.4C12.3 14.5 17.6 9.5 24 9.5z" />
                            <path fill="#4285F4" d="M46.1 24.5c0-1.6-.1-3.1-.4-4.5H24v9h12.6c-.5 2.5-2.1 4.6-4.3 6.1l6.6 5.1c3.9-3.6 6.2-8.9 6.2-15.7z" />
                            <path fill="#FBBC05" d="M10.6 28.8c-.5-1.5-.8-3-.8-4.8s.3-3.3.8-4.8l-7-5.4C2.6 17 2 20.4 2 24s.6 7 1.6 10.2l7-5.4z" />
                            <path fill="#34A853" d="M24 47c5.7 0 10.5-1.9 14-5.2l-6.6-5.1c-1.8 1.2-4.2 2-7.4 2-6.4 0-11.7-5-13.6-11.6l-7 5.4C7.2 41.4 14.9 47 24 47z" />
                        </svg>
                        Continue with Google
                    </button>
                </form>
            </div>

            <div class="foot">
                <div>© @DateTime.UtcNow.Year Disaster Management Authority</div>
                <div>
                    <a href="#">Privacy</a> • <a href="#">Terms</a> • <a href="#">Support</a>
                </div>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
