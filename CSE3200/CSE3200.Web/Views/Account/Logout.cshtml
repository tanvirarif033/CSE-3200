@{
    ViewData["Title"] = "Logout";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="modal fade show" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel"
     aria-modal="true" role="dialog"
     style="display:block; background:rgba(0,0,0,.5);">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content shadow-lg border-0">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
                <a href="~/" class="btn-close"></a>
            </div>
            <div class="modal-body text-center">
                <p class="mb-3">Are you sure you want to log out?</p>

                <form asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="~/" />
                    <button type="submit" class="btn btn-danger me-2">Yes, Logout</button>
                </form>

                <a href="~/" class="btn btn-secondary">Cancel</a>
            </div>
        </div>
    </div>
</div>
