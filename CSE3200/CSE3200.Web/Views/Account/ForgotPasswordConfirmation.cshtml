<!-- Views/Account/ForgotPasswordConfirmation.cshtml -->
@{
    ViewData["Title"] = "OTP Sent";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">OTP Sent Successfully</h3>
            </div>
            <div class="card-body text-center">
                <p>Please check your email for the OTP code to reset your password.</p>
                <a asp-action="Login" class="btn btn-primary">Back to Login</a>
            </div>
        </div>
    </div>
</div>