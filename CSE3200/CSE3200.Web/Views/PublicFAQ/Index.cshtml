@model PublicFAQViewModel
@using CSE3200.Domain.Entities

@{
    ViewData["Title"] = "Frequently Asked Questions";
}

<div class="container py-5">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <h1 class="text-center mb-4">Frequently Asked Questions</h1>

            <!-- Search and Filter -->
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" class="row g-3">
                        <div class="col-md-6">
                            <input type="text" name="search" class="form-control" placeholder="Search FAQs..." value="@Model.SearchTerm">
                        </div>
                        <div class="col-md-4">
                            <select name="category" class="form-control">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category" selected="@(Model.SelectedCategory == category)">@category</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- FAQs List -->
            @if (Model.FAQs.Any())
            {
                <div class="accordion" id="faqAccordion">
                    @foreach (var faq in Model.FAQs)
                    {
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq-@faq.Id">
                                    <strong>@faq.Question</strong>
                                    <span class="badge bg-secondary ms-2">@faq.Category</span>
                                </button>
                            </h2>
                            <div id="faq-@faq.Id" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                <div class="accordion-body">
                                    @Html.Raw(faq.Answer.Replace("\n", "<br>"))
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-question-circle display-1 text-muted"></i>
                    <h3 class="mt-3">No FAQs Found</h3>
                    <p class="text-muted">Try adjusting your search criteria or check back later.</p>
                </div>
            }
        </div>
    </div>
</div>