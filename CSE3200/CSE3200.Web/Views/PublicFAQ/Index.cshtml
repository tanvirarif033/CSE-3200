@model PublicFAQViewModel
@using CSE3200.Domain.Entities
@{
    ViewData["Title"] = "Frequently Asked Questions";
}
<div class="container py-5">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <!-- Page Header -->
            <h1 class="text-center mb-4 fw-bold" style="color: #2c3e50;">Frequently Asked Questions</h1>
            <p class="text-center text-muted mb-5">
                Find answers to common questions about disaster relief, donations, volunteering, and more.
            </p>

            <!-- Search and Filter Card -->
            <div class="card shadow-sm mb-5">
                <div class="card-body p-4">
                    <form method="get" class="row g-3 align-items-end">
                        <div class="col-md-6">
                            <label class="form-label fw-semibold">Search FAQs</label>
                            <div class="input-group">
                                <input type="text" name="search" class="form-control form-control-lg border-end-0"
                                       placeholder="Type your question here..." value="@Model.SearchTerm">
                                <span class="input-group-text bg-white border-start-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <label class="form-label fw-semibold">Category</label>
                            <select name="category" class="form-select form-select-lg">
                                <option value="">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category" @@(Model.SelectedCategory == category ? "selected" : "")>
                                        @category
                                    </option>
                                }
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="submit" class="btn btn-primary btn-lg w-100">
                                <i class="bi bi-funnel me-2"></i> Filter
                            </button>
                        </div>
                    </form>
                </div>
            </div>

            <!-- FAQs List -->
            @if (Model.FAQs.Any())
            {
                <div class="accordion custom-accordion" id="faqAccordion">
                    @{ int index = 0; }
                    @foreach (var faq in Model.FAQs)
                    {
                        index++;
                        string iconClass = index % 4 == 1 ? "bi-question-circle-fill"
                                           : index % 4 == 2 ? "bi-info-circle-fill"
                                           : index % 4 == 3 ? "bi-chat-dots-fill"
                                           : "bi-patch-question-fill";

                        <div class="accordion-item mb-3 border rounded-3 overflow-hidden">
                            <h2 class="accordion-header bg-light p-3">
                                <button class="accordion-button collapsed fw-semibold fs-5 d-flex align-items-center"
                                        type="button" data-bs-toggle="collapse" data-bs-target="#faq-@faq.Id">
                                    <i class="bi @iconClass me-3" style="color: #3498db;"></i>
                                    <span class="flex-grow-1 text-start">@faq.Question</span>
                                    <span class="badge bg-secondary ms-2">@faq.Category</span>
                                </button>
                            </h2>
                            <div id="faq-@faq.Id" class="accordion-collapse collapse"
                                 data-bs-parent="#faqAccordion">
                                <div class="accordion-body p-4">
                                    <div class="d-flex align-items-start">
                                        <i class="bi @iconClass fs-4 me-3 text-primary"></i>
                                        <div>
                                            @Html.Raw(faq.Answer.Replace("\n", "<br>"))
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-question-lg display-1 text-primary mb-3"></i>
                    <h3 class="mt-3" style="color: #2c3e50;">No FAQs Found</h3>
                    <p class="text-muted mb-4">Try adjusting your search criteria or check back later.</p>
                    <a href="/Home/Contact" class="btn btn-outline-primary">
                        <i class="bi bi-envelope me-2"></i> Contact Us for Help
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        /* Custom Accordion Styles */
        .custom-accordion .accordion-item {
            border: 1px solid #dee2e6 !important;
            border-radius: 0.5rem !important;
            overflow: hidden;
            margin-bottom: 1rem;
            transition: box-shadow 0.3s ease;
        }

        .custom-accordion .accordion-item:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.1);
        }

        .custom-accordion .accordion-button {
            padding: 1.25rem 1.5rem;
            background-color: #f8f9fa;
            border: none;
            font-weight: 600;
            color: #2c3e50;
        }

        .custom-accordion .accordion-button:not(.collapsed) {
            background-color: #e9ecef;
            color: #2c3e50;
        }

        .custom-accordion .accordion-button::after {
            filter: brightness(0.5);
        }

        .custom-accordion .accordion-body {
            background-color: white;
            color: #495057;
            line-height: 1.7;
        }

        /* Search Card Styles */
        .card {
            border: none;
            border-radius: 0.75rem;
        }

        .form-control:focus, .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(46, 132, 213, 0.25);
            border-color: #3498db;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .custom-accordion .accordion-button {
                padding: 1rem;
                font-size: 1rem;
            }

            .custom-accordion .accordion-body {
                padding: 1.5rem;
            }
        }
    </style>
}
