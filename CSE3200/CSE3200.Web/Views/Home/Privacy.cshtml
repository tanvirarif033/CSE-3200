@{
    ViewData["Title"] = "Privacy Policy - Disaster Relief";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary">Privacy Policy</h1>
                <p class="lead">Learn how we collect, use, and safeguard your information during disaster response.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-shield-lock-fill text-primary me-2"></i> Information We Collect</h4>
                            <ul class="text-muted">
                                <li>Personal details (e.g., name, email, phone).</li>
                                <li>Location details for assistance or volunteering.</li>
                                <li>Technical data such as IP and browser type.</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-people-fill text-primary me-2"></i> How We Use Information</h4>
                            <ul class="text-muted">
                                <li>Coordinate disaster response and provide help.</li>
                                <li>Connect volunteers and donors with those in need.</li>
                                <li>Send important updates and safety alerts.</li>
                                <li>Improve our website and services.</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-lock-fill text-primary me-2"></i> Data Protection</h4>
                            <p class="text-muted">
                                We implement strong security measures to protect your information.
                                However, no method of internet transmission is <strong>100% secure</strong>.
                            </p>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-share-fill text-primary me-2"></i> Sharing of Information</h4>
                            <p class="text-muted">
                                We never sell or rent your personal data. Information may be shared only with
                                government agencies or trusted partners for disaster management purposes.
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-person-check-fill text-primary me-2"></i> Your Rights</h4>
                            <ul class="text-muted">
                                <li>Request access, update, or delete your data.</li>
                                <li>Opt out of non-essential communications.</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-file-earmark-text-fill text-primary me-2"></i> Changes to Policy</h4>
                            <p class="text-muted">
                                This Privacy Policy may be updated periodically. Any changes will be posted here with the date of revision.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
