@{
    ViewData["Title"] = "Contact Us - Disaster Relief";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="text-center mb-5">
                <h1 class="display-4 fw-bold text-primary">Contact Us</h1>
                <p class="lead">Get in touch with our team for any questions or support needs.</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-geo-alt-fill text-primary me-2"></i>Address</h4>
                            <p class="text-muted">
                                123 Relief Road<br>
                                Disaster Response Center<br>
                                Dhaka 1212, Bangladesh
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-telephone-fill text-primary me-2"></i>Phone</h4>
                            <p class="text-muted">
                                Emergency Hotline: <strong>1-800-DISASTER</strong><br>
                                Office: <strong>+880 2 1234567</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-envelope-fill text-primary me-2"></i>Email</h4>
                            <p class="text-muted">
                                General: <strong>info@disasterrelief.org</strong><br>
                                Support: <strong>support@disasterrelief.org</strong><br>
                                Donations: <strong>donate@disasterrelief.org</strong>
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-body">
                            <h4><i class="bi bi-clock-fill text-primary me-2"></i>Hours</h4>
                            <p class="text-muted">
                                Emergency Response: <strong>24/7</strong><br>
                                Office Hours: <strong>9 AM - 6 PM (GMT+6)</strong><br>
                                Weekends: <strong>Emergency Only</strong>
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h4 class="mb-4">Send us a Message</h4>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Your Name</label>
                                <input type="text" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">Email Address</label>
                                <input type="email" class="form-control" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Subject</label>
                            <input type="text" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Message</label>
                            <textarea class="form-control" rows="5" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>