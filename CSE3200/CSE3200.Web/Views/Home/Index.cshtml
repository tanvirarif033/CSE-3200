@model IList<Disaster>
@using CSE3200.Domain.Entities
@using Humanizer
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Disaster Relief - Home";
}
<!-- DISASTER ALERT BAR -->
<section class="disaster-alert-bar">
    <div class="container-fluid px-0">
        <div class="alert-ticker">
            <div class="ticker-header">
                <span class="ticker-label">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>LIVE ALERTS:
                </span>
            </div>
            <div class="ticker-content">
                @if (ViewBag.DisasterAlerts != null && ((IEnumerable<dynamic>)ViewBag.DisasterAlerts).Any())
                {
                    foreach (var alert in (IEnumerable<dynamic>)ViewBag.DisasterAlerts)
                    {
                        <div class="ticker-item" data-severity="@alert.Severity">
                            <span class="alert-badge severity-@alert.Severity.ToString().ToLower()">@alert.Severity</span>
                            <span class="alert-text">@alert.Title - @alert.Message</span>
                            <span class="alert-time">@alert.StartDate.ToString("MMM dd, yyyy")</span>
                        </div>
                    }
                }
                else
                {
                    <div class="ticker-item" data-severity="None">
                        <span class="alert-text">No active alerts at this time</span>
                    </div>
                }
            </div>
            <div class="ticker-controls">
                <button class="ticker-control-btn" id="prevAlert">
                    <i class="bi bi-chevron-left"></i>
                </button>
                <button class="ticker-control-btn" id="pausePlayAlert">
                    <i class="bi bi-pause-fill"></i>
                </button>
                <button class="ticker-control-btn" id="nextAlert">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</section>
@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        /* DISASTER ALERT BAR STYLES */
        .disaster-alert-bar {
            background: linear-gradient(90deg, #2c2c3d 0%, #1f1f2e 100%);
            color: white;
            padding: 0.5rem 0;
            border-bottom: 2px solid #dc3545;
        }

        .alert-ticker {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 1rem;
        }

        .ticker-header {
            display: flex;
            align-items: center;
            min-width: 120px;
        }

        .ticker-label {
            font-weight: bold;
            white-space: nowrap;
            color: #ffc107;
        }

        .ticker-content {
            flex: 1;
            overflow: hidden;
            height: 30px;
            position: relative;
            margin: 0 1rem;
        }

        .ticker-item {
            position: absolute;
            width: 100%;
            display: flex;
            align-items: center;
            gap: 1rem;
            opacity: 0;
            transition: opacity 0.5s ease;
        }

        .alert-badge {
            padding: 0.25rem 0.5rem;
            border-radius: 0.25rem;
            font-size: 0.75rem;
            font-weight: bold;
        }

        .severity-critical {
            background-color: #dc3545;
            color: white;
        }

        .severity-high {
            background-color: #fd7e14;
            color: white;
        }

        .severity-medium {
            background-color: #ffc107;
            color: black;
        }

        .severity-low {
            background-color: #198754;
            color: white;
        }

        .alert-text {
            flex: 1;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .alert-time {
            font-size: 0.8rem;
            opacity: 0.8;
        }

        .ticker-controls {
            display: flex;
            gap: 0.5rem;
        }

        .ticker-control-btn {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            color: white;
            width: 30px;
            height: 30px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: background 0.3s ease;
        }

            .ticker-control-btn:hover {
                background: rgba(255, 255, 255, 0.2);
            }

        @@media (max-width: 768px) {
            .alert-time {
                display: none;
            }

            .ticker-header {
                min-width: 100px;
            }

            .ticker-label {
                font-size: 0.9rem;
            }
        }

        /* EXISTING STYLES */
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1593113630400-ea4288922497?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
        }

        /* DISASTER CARD SEVERITY STYLES */
        .disaster-card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
            background-color: white; /* Ensure card background is white */
        }

            .disaster-card,
            .disaster-card * {
                color: black !important; /* Force all text to be black */
            }

                .disaster-card:hover {
                    transform: translateY(-5px);
                    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
                }

        /* Only the left border is colored */
        .severity-critical {
            border-left: 4px solid #dc3545;
        }

        .severity-high {
            border-left: 4px solid #fd7e14;
        }

        .severity-medium {
            border-left: 4px solid #ffc107;
        }

        .severity-low {
            border-left: 4px solid #198754;
        }

        .card-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 0.8rem;
        }

        .stats-card {
            background: linear-gradient(45deg, #3f51b5, #303f9f);
            color: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            text-align: center;
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .emergency-banner {
            background: linear-gradient(45deg, #dc3545, #c82333);
            color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }

        .search-box {
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .donate-btn {
            transition: all 0.3s ease;
        }

            .donate-btn:hover {
                transform: scale(1.05);
                background-color: #198754 !important;
            }

        .details-btn {
            transition: all 0.3s ease;
        }

            .details-btn:hover {
                transform: scale(1.05);
                background-color: #0dcaf0 !important;
            }

        .map-btn {
            transition: all 0.3s ease;
        }

            .map-btn:hover {
                transform: scale(1.05);
                background-color: #0d6efd !important;
            }

        .volunteer-badge {
            background: linear-gradient(45deg, #6f42c1, #5a2d9c);
            color: white;
        }

        .donation-badge {
            background: linear-gradient(45deg, #198754, #0f5132);
            color: white;
        }

        .volunteer-stats {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .volunteer-icon {
            color: #6f42c1;
            font-size: 1.1rem;
        }

        .modal-volunteer-table {
            font-size: 0.9rem;
        }

            .modal-volunteer-table th {
                background-color: #f8f9fa;
                font-weight: 600;
            }

        .volunteer-email {
            font-size: 0.8rem;
            color: #6c757d;
        }

        #map {
            height: 400px;
            width: 100%;
            border-radius: 0.5rem;
        }

        .public-faq-section h2 {
            font-size: 2rem;
            margin-bottom: 0.5rem;
        }

        .public-faq-section .accordion-button {
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .public-faq-section .accordion-button:not(.collapsed) {
                background-color: #f8f9fa;
                color: #0d6efd;
                box-shadow: inset 0 -1px 0 rgba(0,0,0,.125);
            }
    </style>
}

<!-- DISASTER ALERT BAR -->
<partial name="~/Views/PublicDisasterAlert/AlertBar.cshtml" />

<!-- Hero Section -->
<partial name="_HeroSection" />

<!-- Emergency Alert Banner -->
<partial name="_EmergencyBanner" />

<!-- Quick Stats -->
<partial name="_QuickStats" model="Model" />

<!-- Search and Filter Section -->
<partial name="_SearchFilter" />

<!-- Disasters Listing Section -->
<partial name="_DisastersList" model="Model" />

<!-- Call to Action Section -->
<partial name="_CallToAction" />

<!-- Public FAQ Section -->
<partial name="_FAQSection" />

<!-- Modals -->
<partial name="_Modals" />

@section Scripts {
    <!-- Google Maps API -->
    <script src="https://maps.googleapis.com/maps/api/js?key=@Configuration["GoogleMaps:ApiKey"]&callback=Function.prototype" async defer></script>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/homepage.js" asp-append-version="true"></script>
}