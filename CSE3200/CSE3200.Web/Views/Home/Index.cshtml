@model IList<Disaster>
@using CSE3200.Domain.Entities
@using Humanizer

@{
    ViewData["Title"] = "Disaster Relief - Home";
}

@section Styles {
    <style>
        .hero-section {
            background: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url('https://images.unsplash.com/photo-1593113630400-ea4288922497?ixlib=rb-4.0.3&auto=format&fit=crop&w=2070&q=80');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 4rem 0;
            margin-bottom: 3rem;
        }

        .disaster-card {
            border: none;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            height: 100%;
        }

            .disaster-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            }

        .severity-critical {
            border-left: 4px solid #dc3545;
        }

        .severity-high {
            border-left: 4px solid #fd7e14;
        }

        .severity-medium {
            border-left: 4px solid #ffc107;
        }

        .severity-low {
            border-left: 4px solid #198754;
        }

        .card-badge {
            position: absolute;
            top: 1rem;
            right: 1rem;
            font-size: 0.8rem;
        }

        .stats-card {
            background: linear-gradient(45deg, #3f51b5, #303f9f);
            color: white;
            border-radius: 0.5rem;
            padding: 1.5rem;
            text-align: center;
        }

        .stats-number {
            font-size: 2.5rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .emergency-banner {
            background: linear-gradient(45deg, #dc3545, #c82333);
            color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-bottom: 2rem;
        }

        .search-box {
            background: white;
            padding: 2rem;
            border-radius: 0.5rem;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .donate-btn {
            transition: all 0.3s ease;
        }

            .donate-btn:hover {
                transform: scale(1.05);
                background-color: #198754 !important;
            }

        .total-donations {
            background: linear-gradient(45deg, #28a745, #20c997);
            color: white;
            padding: 1rem;
            border-radius: 0.5rem;
            margin-top: 1rem;
        }
    </style>
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="display-4 fw-bold mb-4">Disaster Relief & Response</h1>
                <p class="lead mb-4">Providing immediate assistance and support to communities affected by disasters worldwide.</p>
                <div class="d-flex justify-content-center gap-3">
                    <a href="#disasters" class="btn btn-primary btn-lg">View Current Disasters</a>
                    <a href="/Account/Register" class="btn btn-outline-light btn-lg">Get Involved</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Emergency Alert Banner -->
<div class="container">
    <div class="emergency-banner">
        <div class="d-flex align-items-center justify-content-between">
            <div>
                <h5 class="mb-0"><i class="bi bi-exclamation-triangle-fill me-2"></i>Emergency Response Hotline</h5>
                <p class="mb-0">Call 1-800-DISASTER for immediate assistance</p>
            </div>
            <a href="tel:1-800-DISASTER" class="btn btn-light">Call Now</a>
        </div>
    </div>
</div>

<!-- Quick Stats -->
<div class="container mb-5">
    <div class="row g-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-number">@Model.Count</div>
                <div class="stats-label">Active Disasters</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card" style="background: linear-gradient(45deg, #fd7e14, #e66408);">
                <div class="stats-number">@Model.Sum(d => d.AffectedPeople).ToString("N0")</div>
                <div class="stats-label">People Affected</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card" style="background: linear-gradient(45deg, #198754, #0f5132);">
                <div class="stats-number">@Model.Count(d => d.Severity == DisasterSeverity.Critical)</div>
                <div class="stats-label">Critical Situations</div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card" style="background: linear-gradient(45deg, #6f42c1, #5a2d9c);">
                <div class="stats-number">@ViewBag.TotalDonations?.ToString("C0")</div>
                <div class="stats-label">Total Donations</div>
            </div>
        </div>
    </div>
</div>

<!-- Search and Filter Section -->
<div class="container">
    <div class="search-box">
        <h4 class="mb-3">Find Disaster Information</h4>
        <div class="row">
            <div class="col-md-8">
                <input type="text" class="form-control form-control-lg" placeholder="Search by location or disaster type..." id="disasterSearch">
            </div>
            <div class="col-md-4">
                <select class="form-select form-select-lg" id="severityFilter">
                    <option value="">All Severity Levels</option>
                    <option value="Critical">Critical</option>
                    <option value="High">High</option>
                    <option value="Medium">Medium</option>
                    <option value="Low">Low</option>
                </select>
            </div>
        </div>
    </div>
</div>

<!-- Disasters Listing Section -->
<section id="disasters" class="py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-3">Current Disaster Situations</h2>
                <p class="text-center text-muted">These are the currently active disasters that require immediate attention and support.</p>
            </div>
        </div>

        @if (Model.Any())
        {
            <div class="row g-4" id="disastersContainer">
                @foreach (var disaster in Model.OrderByDescending(d => d.Severity).ThenByDescending(d => d.OccurredDate))
                {
                    <div class="col-lg-4 col-md-6" data-severity="@disaster.Severity.ToString()">
                        <div class="card disaster-card severity-@disaster.Severity.ToString().ToLower()">
                            <span class="card-badge badge bg-@GetSeverityBadgeClass(disaster.Severity)">
                                @disaster.Severity
                            </span>
                            <div class="card-body">
                                <h5 class="card-title">@disaster.Title</h5>
                                <p class="card-text text-muted small">
                                    <i class="bi bi-geo-alt-fill"></i> @disaster.Location
                                    <br>
                                    <i class="bi bi-calendar-event"></i> @disaster.OccurredDate.ToString("MMMM dd, yyyy")
                                </p>
                                <p class="card-text">@disaster.Description.Truncate(120)</p>

                                <div class="mb-3">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <span class="fw-bold">Affected People:</span>
                                        <span class="badge bg-primary">@disaster.AffectedPeople.ToString("N0")</span>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <h6 class="fw-bold">Required Assistance:</h6>
                                    <p class="text-muted small">@disaster.RequiredAssistance.Truncate(100)</p>
                                </div>

                                <!-- DONATION BUTTON ADDED HERE -->
                                <div class="d-flex justify-content-between align-items-center">
                                    <small class="text-muted">
                                        <i class="bi bi-clock"></i> @disaster.OccurredDate.Humanize()
                                    </small>
                                    <button class="btn btn-sm btn-success donate-btn"
                                            data-disaster-id="@disaster.Id"
                                            data-disaster-title="@disaster.Title">
                                        <i class="bi bi-heart-fill me-1"></i> Donate
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                <h3 class="mt-3">No Active Disasters</h3>
                <p class="text-muted">There are currently no active disaster situations requiring immediate attention.</p>
                <p class="text-muted">Check back later for updates or contact us to report a new disaster.</p>
            </div>
        }
    </div>
</section>

<!-- Call to Action Section -->
<section class="bg-light py-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h2 class="mb-4">How You Can Help</h2>
                <p class="lead mb-4">Your support can make a difference in disaster relief efforts. Here's how you can contribute:</p>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="bi bi-cash-coin display-4 text-primary mb-3"></i>
                            <h5>Donate</h5>
                            <p class="text-muted">Financial contributions help provide immediate relief</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="bi bi-people display-4 text-primary mb-3"></i>
                            <h5>Volunteer</h5>
                            <p class="text-muted">Join our team of dedicated volunteers</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="text-center">
                            <i class="bi bi-megaphone display-4 text-primary mb-3"></i>
                            <h5>Spread Awareness</h5>
                            <p class="text-muted">Share information about ongoing disasters</p>
                        </div>
                    </div>
                </div>
                <div class="mt-4">
                    <a href="/Account/Register" class="btn btn-primary btn-lg me-3">Get Involved</a>
                    <a href="/Home/Contact" class="btn btn-outline-primary btn-lg">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- DONATION MODAL ADDED HERE -->
<div class="modal fade" id="donationModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Make a Donation</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form id="donationForm">
                <div class="modal-body">
                    <input type="hidden" id="donationDisasterId" name="DisasterId" />
                    <input type="hidden" id="donationDisasterTitle" name="DisasterTitle" />

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i>
                        You are donating to: <strong id="donationDisasterName"></strong>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Your Name *</label>
                                <input type="text" class="form-control" name="DonorName" required>
                                <div class="invalid-feedback">Please provide your name</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Email *</label>
                                <input type="email" class="form-control" name="DonorEmail" required>
                                <div class="invalid-feedback">Please provide a valid email</div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Phone Number *</label>
                                <input type="tel" class="form-control" name="DonorPhone" required>
                                <div class="invalid-feedback">Please provide your phone number</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Amount (BDT) *</label>
                                <input type="number" class="form-control" name="Amount" min="1" required>
                                <div class="invalid-feedback">Please enter a valid amount</div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Payment Method *</label>
                        <select class="form-select" name="PaymentMethod" required>
                            <option value="">Select Payment Method</option>
                            <option value="bKash">bKash</option>
                            <option value="Nagad">Nagad</option>
                            <option value="BankTransfer">Bank Transfer</option>
                            <option value="CreditCard">Credit Card</option>
                        </select>
                        <div class="invalid-feedback">Please select a payment method</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Notes (Optional)</label>
                        <textarea class="form-control" name="Notes" rows="3" placeholder="Any additional notes or messages..."></textarea>
                    </div>

                    <div id="donationResult" class="alert d-none"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-credit-card me-1"></i> Proceed to Payment
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Search functionality
            $('#disasterSearch').on('keyup', function () {
                var searchText = $(this).val().toLowerCase();
                var severityFilter = $('#severityFilter').val();

                $('#disastersContainer .col-lg-4').each(function () {
                    var cardText = $(this).text().toLowerCase();
                    var cardSeverity = $(this).data('severity');
                    var matchesSearch = searchText === '' || cardText.includes(searchText);
                    var matchesSeverity = severityFilter === '' || cardSeverity === severityFilter;

                    $(this).toggle(matchesSearch && matchesSeverity);
                });
            });

            // Severity filter
            $('#severityFilter').on('change', function () {
                $('#disasterSearch').trigger('keyup');
            });

            // Smooth scroll for anchor links
            $('a[href^="#"]').on('click', function (e) {
                e.preventDefault();
                $('html, body').animate({
                    scrollTop: $($(this).attr('href')).offset().top - 100
                }, 500);
            });

            // Get anti-forgery token
            function getAntiForgeryToken() {
                return $('input[name="__RequestVerificationToken"]').val();
            }

            // DONATION FUNCTIONALITY
            $('.donate-btn').on('click', function () {
                const disasterId = $(this).data('disaster-id');
                const disasterTitle = $(this).data('disaster-title');

                $('#donationDisasterId').val(disasterId);
                $('#donationDisasterTitle').val(disasterTitle);
                $('#donationDisasterName').text(disasterTitle);

                // Reset form
                $('#donationForm')[0].reset();
                $('#donationForm').removeClass('was-validated');
                $('#donationResult').addClass('d-none').removeClass('alert-success alert-danger');

                $('#donationModal').modal('show');
            });

            // Handle donation form submission
            $('#donationForm').on('submit', function (e) {
                e.preventDefault();

                const form = $(this)[0];
                if (!form.checkValidity()) {
                    e.stopPropagation();
                    $(this).addClass('was-validated');
                    return;
                }

                const formData = $(this).serialize();
                const submitBtn = $(this).find('button[type="submit"]');

                // Show loading state
                submitBtn.prop('disabled', true).html('<span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span> Processing...');

                $.ajax({
                    url: '/Home/Donate',
                    type: 'POST',
                    data: formData,
                    headers: {
                        'RequestVerificationToken': getAntiForgeryToken()
                    },
                    success: function (response) {
                        if (response.success) {
                            $('#donationResult').removeClass('d-none alert-danger')
                                .addClass('alert-success')
                                .html(`
                                    <i class="bi bi-check-circle-fill"></i>
                                    <strong>Success!</strong> ${response.message}
                                    <br><small>Transaction ID: ${response.transactionId}</small>
                                    <br><small>Thank you for your generosity!</small>
                                `);

                            // Reset form and close modal after 3 seconds
                            setTimeout(() => {
                                $('#donationModal').modal('hide');
                                $('#donationForm')[0].reset();
                                $('#donationForm').removeClass('was-validated');
                                submitBtn.prop('disabled', false).html('<i class="bi bi-credit-card me-1"></i> Proceed to Payment');
                            }, 3000);
                        } else {
                            $('#donationResult').removeClass('d-none alert-success')
                                .addClass('alert-danger')
                                .html(`
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Error:</strong> ${response.message}
                                    ${response.errors ? '<br><small>' + response.errors.join('<br>') + '</small>' : ''}
                                `);
                            submitBtn.prop('disabled', false).html('<i class="bi bi-credit-card me-1"></i> Proceed to Payment');
                        }
                    },
                    error: function (xhr, status, error) {
                        console.error('AJAX Error:', status, error, xhr.responseText);
                        $('#donationResult').removeClass('d-none alert-success')
                            .addClass('alert-danger')
                            .html(`
                                <i class="bi bi-exclamation-triangle-fill"></i>
                                <strong>Error:</strong> Something went wrong. Please try again.
                                <br><small>${xhr.status} ${xhr.statusText}</small>
                            `);
                        submitBtn.prop('disabled', false).html('<i class="bi bi-credit-card me-1"></i> Proceed to Payment');
                    }
                });
            });

            // Clear validation when modal is closed
            $('#donationModal').on('hidden.bs.modal', function () {
                $('#donationForm').removeClass('was-validated');
                $('#donationResult').addClass('d-none').removeClass('alert-success alert-danger');
            });
        });
    </script>
}

@functions {
    private string GetSeverityBadgeClass(DisasterSeverity severity)
    {
        return severity switch
        {
            DisasterSeverity.Critical => "danger",
            DisasterSeverity.High => "warning",
            DisasterSeverity.Medium => "info",
            DisasterSeverity.Low => "success",
            _ => "secondary"
        };
    }
}